{{#partial "contenido"}}

    {{#if popup_title}}
        {{> templates/popup}}
    {{/if}}
<div class="tarjetas-entregadas ml-auto mr-auto">
    <h2 class="mt-3">Tarjetas Entregadas</h2>
    {{#each tarjetasEntregadas}}
        <div id="divexpand" class="tarjeta-persona-vulnerable div-expand">
            <p class="nro-tarjeta mr-5 mt-auto mb-auto">Nro: {{this.numero}}</p>
            <p class="ml-3 mt-2 mb-2">Usos disponibles: {{this.usosDisponibles}}</p>
        </div>
        <div class="expandible-t hidden">
            <table>
                <thead>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>DNI</th>
                <th>Edad</th>
                </thead>
                <tbody>
                <tr>
                    <td>{{this.nombrePropietario}}</td>
                    <td>{{this.apellidoPropietario}}</td>
                    <td>{{this.dniPropietario}}</td>
                    <td>{{this.edadPropietario}}</td>
                </tr>
                </tbody>
            </table>
        </div>
    {{/each}}
</div>

<script src="/js/tarjetas-entregadas-desplegable.js"></script>
{{/partial}}
{{> templates/tarjetas/home}}