{{#partial "contenido"}}
<div class="tarjetas-entregadas ml-auto mr-auto">
    <h2 class="mt-3">Tarjetas Entregadas</h2>
    {{#each tarjetasEntregadas}}
        <form class="form-tarjeta" action="/tarjeta/delete/{{this.numero}}" method="POST" onsubmit="return confirmarEnvio()">
            <div class="tarjeta-persona-vulnerable div-expand">
            <p class="nro-tarjeta mr-5 mt-auto mb-auto">Nro: {{this.numero}}</p>
            <button class="btn-transparente ml-5 mt-auto mb-auto" type="submit">
                <img class="paper-bin-img" src="/img/paper-bin.png" alt="Erase">
            </button>
            </div>
        </form>
    {{/each}}
</div>
<script>
    function confirmarEnvio() {
        return confirm("¿Estás seguro de que quieres eliminar la tarjeta?");
    }
</script>
{{/partial}}
{{> templates/tarjetas/home}}
