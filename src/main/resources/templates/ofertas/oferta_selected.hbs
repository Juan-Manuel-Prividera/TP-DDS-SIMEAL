{{#partial "ofertas"}}
    <div class="container-inferior">
        {{#each ofertas}}
            <a class="offer-card" href="{{this.id}}" data-point="{{this.puntosNecesarios}}" data-rubro="{{this.rubroId}}">
                <img src="{{this.imagen}}" alt="Descripción de la oferta" class="offer-image-short">
                <p class="offer-title">{{this.nombre}}</p>
                <p class="offer-update">Coste: {{this.puntosNecesarios}} pts</p>
                <p class="offer-update">Rubro: {{this.rubroNombre}}</p>
                <p class="offer-update">Fecha de publicación: {{this.fechaDeRealizacion}}</p>
            </a>
        {{/each}}
    </div>

    <!-- Sección de Detalles -->
    <div class="container-inferior-derecho">
        <img src="{{oferta.imagen}}" alt="Producto">
        <h2><b>{{oferta.nombre}}</b></h2>
        <div class="texto-izquierda">
            <p>Puntos necesarios: {{oferta.puntosNecesarios}}</p>
            <p>Producto: {{oferta.productoNombre}}</p>
            <p class="descripcion">Descripcion: {{oferta.productoDes}}<p>
        </div>

        {{#if esHumano}}
            <a class="dark-btn" id="confirmarCompraBtn">Comprar</a>
        {{/if}}
    </div>

    <!-- Sección de Confirmación -->
        <div class="confirmation-box" id="confirmacionDisplay">
            <p class="confirmation-text"><b>¿Desea confirmar la compra?</b></p>
            <div class="confirmation-buttons">
                <a class="btn btn-success confirm-btn" id="confirmarBtn">Confirmar</a>
                <a class="btn btn-danger cancel-btn" id="cancelarBtn">Cancelar</a>
            </div>
        </div>

<script src="/js/displayConfirmarCompraOferta.js"></script>
{{/partial}}
{{> templates/ofertas/oferta_upperBox}}

