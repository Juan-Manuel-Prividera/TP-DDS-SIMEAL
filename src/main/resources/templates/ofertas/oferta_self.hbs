{{#partial "ofertas"}}
    <div class="container-inferior">
        {{#each ofertas}}
            <a class="offer-card" href="/ofertas/misOfertas/{{this.id}}" data-point="{{this.puntosNecesarios}}" data-rubro="{{this.rubroId}}">
                <img src="{{this.imagen}}" alt="Imagen de la oferta" class="offer-image-short">
                <p class="offer-title">{{this.nombre}}</p>
                <p class="offer-update">Coste: {{this.puntosNecesarios}} pts</p>
                <p class="offer-update">Rubro: {{this.rubroNombre}}</p>
                <p class="offer-update">Fecha de publicaci√≥n: {{this.fechaDeRealizacion}}</p>
            </a>
        {{/each}}
    </div>
{{/partial}}
